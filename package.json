{
    "name": "prattle",
    "version": "0.0.0",
    "description": "Run spec, benchmark and impact tests, all from one tool",
    "keywords": [
        "framework",
        "test",
        "spec",
        "benchmark",
        "impact"
    ],
    "homepage": "https://prattle.now.sh/",
    "repository": "futagoza/prattle",
    "license": "MIT",
    "author": "Futago-za Ryuu <futagoza.ryuu@gmail.com>",
    "files": [
        "bin",
        "dist",
        "src"
    ],
    "main": "dist/node/api/index.js",
    "bin": "bin/prattle",
    "browser": "dist/prattle.js",
    "scripts": {
        "lint": "eslint .",
        "spec": "mocha --reporter progress",
        "build:node": "rimraf dist/node && tsc -p src",
        "build:browser": "webpack --config src/webpack.config.js",
        "clean": "rimraf .nyc_output coverage dist",
        "test": "nyc mocha",
        "coverage": "codecov -f coverage/*.json",
        "prepack": "npm run build:node && npm run build:browser",
        "postversion": "git push --follow-tags && npm publish"
    },
    "dependencies": {
        "@sinonjs/referee-sinon": "5.0.0",
        "bluebird": "3.7.0",
        "cosmiconfig": "5.2.1",
        "chai": "4.2.0",
        "emittery": "0.4.1",
        "glob": "7.1.4",
        "mkdirp": "0.5.1",
        "lodash": "4.17.15"
    },
    "devDependencies": {
        "@babel/core": "7.6.2",
        "@babel/preset-env": "7.6.2",
        "@futagoza/eslint-config": "10.0.0",
        "@types/node": "8",
        "babel-loader": "8.0.6",
        "codecov": "3.6.1",
        "dedent": "0.7.0",
        "eslint": "6.5.1",
        "mocha": "6.2.1",
        "nyc": "14.1.1",
        "rimraf": "3.0.0",
        "webpack": "4.41.0",
        "webpack-cli": "3.3.9"
    },
    "engines": {
        "node": ">= 8"
    }
}
